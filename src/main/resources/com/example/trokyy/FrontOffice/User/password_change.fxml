<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trokyy.controllers.User.PasswordChangeController">
   <children>
      <Pane layoutX="82.0" layoutY="47.0">
         <children>
             <Label text="OTP Verification" />
             <TextField fx:id="otpField" layoutY="30.0" promptText="Enter OTP" />
             <Button layoutY="80.0" onAction="#handleVerifyOTP" text="Verify OTP" />
         </children>
      </Pane>

       <VBox fx:id="passwordChangeForm" alignment="center" layoutY="200.0" prefHeight="134.0" prefWidth="313.0" spacing="10" visible="false">
           <PasswordField fx:id="oldPasswordField" promptText="Old Password" />
           <PasswordField fx:id="newPasswordField" promptText="New Password" />
           <PasswordField fx:id="confirmNewPasswordField" promptText="Confirm New Password" />
           <Button onAction="#handleSavePassword" text="Save" />
       </VBox>
   </children>
</AnchorPane>
